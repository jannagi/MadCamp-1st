<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainActivity">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.firstapp.MainActivity">
        <!-- Define actions to each detail activity -->
        <action
            android:id="@+id/action_main_to_contact"
            app:destination="@id/contactActivity" />
        <action
            android:id="@+id/action_main_to_gallery"
            app:destination="@id/galleryActivity" />
        <action
            android:id="@+id/action_main_to_third"
            app:destination="@id/thirdActivity" />
    </activity>

    <activity
        android:id="@+id/contactActivity"
        android:name="com.example.firstapp.ContactPage" />

    <activity
        android:id="@+id/galleryActivity"
        android:name="com.example.firstapp.GalleryPage" />

    <activity
        android:id="@+id/thirdActivity"
        android:name="com.example.firstapp.ThirdPage" />
</navigation>