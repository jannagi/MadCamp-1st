<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.firstapp.MainActivity"
        android:label="Main Fragment">

        <action
            android:id="@+id/action_mainFragment_to_contactFragment"
            app:destination="@id/contactFragment" />

        <action
            android:id="@+id/action_mainFragment_to_galleryFragment"
            app:destination="@id/galleryFragment" />

        <action
            android:id="@+id/action_mainFragment_to_thirdFragment"
            app:destination="@id/thirdFragment" />
    </fragment>

    <fragment
        android:id="@+id/contactFragment"
        android:name="com.example.firstapp.ContactPage"
        android:label="Contact Fragment" />

    <fragment
        android:id="@+id/galleryFragment"
        android:name="com.example.firstapp.GalleryPage"
        android:label="Gallery Fragment" />

    <fragment
        android:id="@+id/thirdFragment"
        android:name="com.example.firstapp.ThirdPage"
        android:label="Third Fragment" />
</navigation>